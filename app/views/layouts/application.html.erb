<!DOCTYPE html>
<html>
<head>
  <title>MyNewApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul>
    <li><h1><%= link_to 'Home', root_path %></h1></li>
    <li><h1><%= link_to 'About', about_path %></h1></li>
    <li><h1><%= link_to 'Cat Pictures', cat_pictures_path %></h1></li>
    <li><h1><%= link_to 'Movies', movies_path %></h1></li>
  </ul>
  <%= yield %>

  <% flash.each do |type, message| %>
  <div class="<%= type %>">
    <p><%= message %></p>
  </div>
  <% end %>

  <% if user_signed_in? %>
  <li>Signed in as <%= current_user.email  %></li>
  <li><%= link_to "Sign Out", sign_out_path, method: :delete %></li>
  <% else %>
  <li><%= link_to "Sign In", sign_in_path %></li>
  <li><%= link_to "Sign Up", sign_up_path %></li>
  <% end %>
</body>
</html>
