<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<p>
  <strong>Release date:</strong>
  <%= @movie.release_date %>
</p>

<h1>Favorited By</h1>
<ul>
  <% @users.each do |user| %>
    <li><%= user.email %></li>
  <% end %>
  <end>
</ul>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_movie_path(@movie) %> |
  <%= link_to 'Back', movies_path %>
<% else %>
  <%= link_to 'Back', movies_path %>
<% end %>
